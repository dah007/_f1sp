{
    "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
    "data-source": {
        "database-type": "mysql",
        "options": {},
        "connection-string": "@env('DATABASE_CONNECTION_STRING')"
    },
    "runtime": {
        "rest": {
            "enabled": true,
            "path": "/rest"
        },
        "graphql": {
            "allow-introspection": true,
            "enabled": true,
            "path": "/graphql"
        },
        "host": {
            "mode": "production",
            "cors": {
                "origins": ["http://localhost:4280"],
                "allow-credentials": false
            },
            "authentication": {
                "provider": "StaticWebApps"
            }
        }
    },
    "entities": {
        "circuits": {
            "source": {
                "type": "view",
                "key-fields": ["id"],
                "object": "circuits_w_data"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },

        "driver": {
            "source": "driver",
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },
        "drivers": {
            "source": {
                "type": "view",
                "key-fields": ["id"],
                "object": "driver_w_data"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },
        "driversStandings": {
            "source": {
                "type": "view",
                "key-fields": ["id"],
                "object": "driver_w_standings"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },

        "fastestLap": {
            "source": {
                "type": "view",
                "key-fields": ["race_id"],
                "object": "fastest_lap_w_driver"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },
        "pitStop": {
            "source": {
                "object": "pit_stop",
                "key-fields": ["race_id"],
                "type": "view"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },
        "raceNext": {
            "source": {
                "type": "view",
                "key-fields": ["id"],
                "object": "race_next"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },
        "raceResult": {
            "source": {
                "type": "view",
                "key-fields": ["race_id", "year"],
                "object": "rr_w_driver"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },
        "raceGP": {
            "source": {
                "type": "view",
                "key-fields": ["id"],
                "object": "race_w_gp"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        }
    }
}
