            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },

        "createUser": {
            "source": {
                "type": "table",
                "object": "user",
                "key-fields": ["email"]
            },
            "permissions": [
                {
                    "actions": ["read", "create"],
                    "role": "anonymous"
                }
            ],
            "rest": {
                "methods": ["post", "get"],
                "path": "/createUser"
            }
        },
        "readUser": {
            "source": {
                "type": "table",
                "object": "user",
                "key-fields": ["email"]
            },
            "permissions": [
                {
                    "actions": ["read"],
                    "role": "anonymous"
                }
            ],
            "rest": {
                "methods": ["get"],
                "path": "/readUser"
            },
            "graphql": {
                "enabled": true,
                "type": {
                    "singular": "User",
                    "plural": "Users"
                }
            }
        },

        "vote": {
            "source": {
                "type": "table",
                "object": "vote",
                "key-fields": ["id"]
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ],
            "rest": {
                "methods": ["post"],
                "path": "/vote"
            }
        },
        "voteCheck": {
            "source": {
                "type": "table",
                "object": "vote",
                "key-fields": ["email", "race_id"]
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ],
            "rest": {
                "methods": ["get"],
                "path": "/voteCheck"
            }
        }
    }
