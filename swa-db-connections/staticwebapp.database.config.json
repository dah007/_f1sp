{
    "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
    "data-source": {
        "database-type": "mysql",
        "options": {},
        "connection-string": "@env('DATABASE_CONNECTION_STRING')"
    },
    "runtime": {
        "rest": {
            "enabled": true,
            "path": "/rest"
        },
        "graphql": {
            "allow-introspection": true,
            "enabled": true,
            "path": "/graphql"
        },
        "host": {
            "mode": "production",
            "cors": {
                "origins": [
                    "http://localhost:4280",
                    "https://localhost:3000",
                    "chrome-extension://coohjcphdfgbiolnekdpbcijmhambjff"
                ],
                "allow-credentials": true
            },
            "authentication": {
                "provider": "StaticWebApps"
            }
        }
    },
    "entities": {
        "circuitWYear": {
            "source": {
                "type": "view",
                "key-fields": ["race_id"],
                "object": "circuit_w_race_year"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },
        "constructors": {
            "source": {
                "type": "view",
                "key-fields": ["id"],
                "object": "constructors_with_data"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },

        "driver": {
            "source": "driver",
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },
        "driverOfTheDay": {
            "source": {
                "type": "view",
                "key-fields": ["race_id"],
                "object": "dod_w_driver"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },
        "drivers": {
            "source": {
                "type": "view",
                "key-fields": ["id"],
                "object": "driver_w_data"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },
        "driversStandings": {
            "source": {
                "type": "view",
                "key-fields": ["id"],
                "object": "driver_w_standings"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },

        "engine_manufacturers": {
            "source": {
                "type": "view",
                "key-fields": ["id"],
                "object": "engine_manufacturers_w_country"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },
        "engines": {
            "source": {
                "type": "view",
                "key-fields": ["id"],
                "object": "engine_w_country"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },
        "tyres": {
            "source": {
                "type": "view",
                "key-fields": ["id"],
                "object": "tyre_manufacturer_w_data"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },

        "fastestLap": {
            "source": {
                "type": "view",
                "key-fields": ["race_id"],
                "object": "fastest_lap_w_driver"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },

        "lastResultsByCircuit": {
            "source": {
                "type": "view",
                "key-fields": ["circuit_id"],
                "object": "last_race_circuit"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },

        "maxRaceIdByCircuit": {
            "source": {
                "type": "view",
                "key-fields": ["circuit_id"],
                "object": "max_race_id_by_circuit"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },
        "pitStop": {
            "source": {
                "object": "pit_stop",
                "key-fields": ["race_id"],
                "type": "view"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
        },
        "previousWinnersAtCircuit": {
            "source": {
                "type": "view",
                "key-fields": ["circuit_id"],
                "object": "previous_winners_circuit"
