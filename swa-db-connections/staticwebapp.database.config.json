        "previousFirstPlaceResults": {
            "source": {
                "type": "view",
                "key-fields": ["circuit_id"],
                "object": "results_w_data"
            },
            "permissions": [
                {
                    "actions": ["*"],
                    "role": "anonymous"
                }
            ]
